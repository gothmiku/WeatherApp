<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameBound"
    android:layout_width="match_parent"
    android:layout_height="83dp"
    android:clickable="true"
    android:paddingLeft="3dp"
    android:paddingTop="3dp"
    android:paddingEnd="3dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/newsImageBound"
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/md_theme_error"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/newsTitle"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/poppins_extrabold"
        android:singleLine="true"
        android:text="Meow"
        android:textColor="@color/md_theme_primary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/newsImageBound"
        app:layout_constraintTop_toTopOf="@id/newsImageBound" />

    <TextView
        android:id="@+id/newsDesc"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="3dp"
        android:alpha="0.5"
        android:fadeScrollbars="true"
        android:fontFamily="@font/poppins_medium"
        android:text="MEOW MEOW MEOW MEOW MEOW MEOW MEOW MEOW MEOW MEOW MEOW MEOW MEOW MEOWMEOW MEOW MEOW MEOW MEOW MEOW MEOW"
        android:textColor="@color/md_theme_primary"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/newsImageBound"
        app:layout_constraintEnd_toStartOf="@id/newsOutlet"
        app:layout_constraintTop_toBottomOf="@id/newsTitle" />

    <TextView
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:id="@+id/newsOutlet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.25"
        android:text="ABS News"
        android:textSize="10sp"
        android:maxLength="8"
        app:layout_constraintBottom_toBottomOf="@id/newsImageBound"
        app:layout_constraintEnd_toEndOf="@id/frameBound" />
</androidx.constraintlayout.widget.ConstraintLayout>