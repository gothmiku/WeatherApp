<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/CurrentWeatherIcon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cloud"
                android:tint="@color/md_theme_primary_highContrast"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/CurrentWeatherTitle"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_extrabold"
                android:text="CLOUDY"
                android:textColor="@color/md_theme_primary_highContrast"
                android:textSize="30sp"
                app:layout_constraintStart_toEndOf="@id/CurrentWeatherIcon"
                app:layout_constraintTop_toTopOf="@id/CurrentWeatherIcon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/CurrentWeatherIcon"
                app:layout_constraintTop_toBottomOf="@id/CurrentWeatherTitle"
                android:text="partially cloudly"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/md_theme_primary_mediumContrast"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                app:layout_constraintStart_toEndOf="@id/CurrentWeatherTitle"
                app:layout_constraintTop_toTopOf="parent"
                android:text="36"
                android:textSize="70sp"
                android:fontFamily="@font/poppins_extrabold_italic"
                android:textColor="@color/md_theme_primary_highContrast"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>