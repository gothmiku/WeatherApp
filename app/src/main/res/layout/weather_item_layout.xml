<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/cloud"
        app:tint="@color/md_theme_onSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tempText"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/poppins_bold_italic"
        android:text="32"
        android:textAlignment="center"
        android:textColor="@color/md_theme_onSurface"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/weatherIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weatherText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="62dp"
        android:textSize="11sp"
        android:text="Meow"
        app:layout_constraintStart_toStartOf="@id/tempText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weatherDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginStart="62dp"
        android:textSize="9sp"
        android:text="Meow"
        app:layout_constraintStart_toStartOf="@id/tempText"
        app:layout_constraintTop_toTopOf="@id/weatherText" />
</androidx.constraintlayout.widget.ConstraintLayout>