<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:elevation="2dp"
        app:cardBackgroundColor="@color/md_theme_primaryContainer"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradients"
                android:padding="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/handjet_semibold"
                    android:letterSpacing="0.1"
                    android:text="@string/forecast_titlebar"
                    android:textColor="@color/md_theme_onPrimaryContainer_mediumContrast"
                    android:textSize="25sp" />

            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="15dp">
                    <ImageView
                        android:id="@+id/compassIcon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/compass"
                        app:tint="@color/md_theme_onPrimaryContainer"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/windSpeedText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 m/s"
                        app:layout_constraintTop_toBottomOf="@id/compassIcon"
                        app:layout_constraintStart_toStartOf="@id/compassIcon"
                        app:layout_constraintEnd_toEndOf="@id/compassIcon"
                        android:fontFamily="@font/poppins_extrabold_italic"
                        android:textColor="@color/md_theme_onPrimaryContainer"
                        android:textSize="40sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="m/s"
                        android:alpha="0.5"
                        android:textSize="40sp"
                        android:layout_marginTop="-20dp"
                        android:fontFamily="@font/poppins_medium_italic"
                        android:textColor="@color/md_theme_onPrimaryContainer"
                        app:layout_constraintStart_toStartOf="@id/windSpeedText"
                        app:layout_constraintTop_toBottomOf="@id/windSpeedText"
                        app:layout_constraintEnd_toEndOf="@id/windSpeedText"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>