<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/md_theme_secondaryContainer"
        app:cardCornerRadius="15dp"
        android:layout_margin="7dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradients"
                android:padding="7dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/handjet_semibold"
                    android:letterSpacing="0.1"
                    android:text="@string/humidity"
                    android:textColor="@color/md_theme_onSecondaryContainer_mediumContrast"
                    android:textSize="25sp" />
            </FrameLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/card_shade"
                android:layout_height="256dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/md_theme_inversePrimary_mediumContrast">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Shader background -->
                    <com.example.weatherapp.presentation.shaders.SmartShaderView
                        android:id="@+id/shader_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <!-- Content overlay -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:shadowColor="@color/cardview_dark_background"
                            android:shadowRadius="15"
                            android:src="@drawable/dripp"
                            app:tint="@color/md_theme_onPrimaryContainer_mediumContrast"
                            android:alpha="0.9"/>

                        <TextView
                            android:id="@+id/humidityText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="5"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/poppins_extrabold_italic"
                            android:gravity="center"
                            android:shadowColor="@color/cardview_dark_background"
                            android:shadowRadius="0"
                            android:text="50"
                            android:alpha="0.9"
                            android:textAlignment="center"
                            android:textColor="@color/md_theme_onPrimaryContainer_mediumContrast"
                            android:textSize="90sp"
                            android:scaleX="1.3"
                            android:scaleY="1.3"/>

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>