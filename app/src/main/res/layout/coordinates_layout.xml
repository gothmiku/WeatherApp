<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="15dp"
        android:layout_margin="3dp"
        android:elevation="2dp"
        app:cardBackgroundColor="@color/md_theme_primaryContainer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="7dp"
                android:background="@drawable/gradients"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/handjet_semibold"
                    android:letterSpacing="0.1"
                    android:text="Location"
                    android:textColor="@color/md_theme_onPrimaryContainer_mediumContrast"
                    android:textSize="25sp" />
            </FrameLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/locationPin"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:src="@drawable/loc_pin"
                            app:tint="@color/md_theme_primary" />
                        <TextView
                            android:id="@+id/cityText"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintStart_toEndOf="@+id/locationPin"
                            app:layout_constraintTop_toTopOf="@id/locationPin"
                            android:fontFamily="@font/poppins_extrabold_italic"
                            android:textColor="@color/md_theme_primary"
                            android:textSize="25sp"
                            android:text="IST"/>
                        <TextView
                            android:id="@+id/countryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/locationPin"
                            app:layout_constraintTop_toBottomOf="@id/cityText"
                            android:fontFamily="@font/poppins_medium"
                            android:textSize="15sp"
                            android:textColor="@color/md_theme_primary"
                            android:alpha="0.5"
                            android:text="TUR"/>
                        <TextView
                            android:id="@+id/latText"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/locationPin"
                            app:layout_constraintStart_toStartOf="@id/locationPin"
                            android:fontFamily="@font/poppins_medium_italic"
                            android:textColor="@color/md_theme_primary"
                            android:alpha="0.2"
                            android:textSize="10sp"
                            android:text="34.32563432"/>
                        <TextView
                            android:id="@+id/lonText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/latText"
                            app:layout_constraintStart_toStartOf="@id/latText"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/md_theme_primary"
                            android:alpha="0.2"
                            android:textSize="10sp"
                            android:text="29.32563432"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

